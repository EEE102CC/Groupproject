using namespace std;
class Student{
public:
    //declaration
    string name,status,password;
    int id;
    
    void viewdata(string ID){
        // filestream variable file
        ifstream file;
        string word, t, q, filename;

        // filename of the file
        filename = "studentdata.txt";

        // opening file
        file.open(filename.c_str());
        string info;
        cout << "Please enter your registered student ID: "<< endl;
        cin >> ID;
        cout << "StudentID"<<"\t"<<"Name"<<" "<<"Status"<<endl;
        
        // extracting words from the file
        while (file >> word)
        {
            //display information based on ID
            if (word == ID) {
                getline(file , info);
                cout << ID <<"\t"<<info << endl;
            }
        }
        file.close();
    }
    
    void viewmarks(){
        
        // filestream variable file
            ifstream file;
            string word, t, q, filename;

            // filename of the file
            filename = "selectcourse.txt";

            // opening file
            file.open(filename.c_str());
            string ID,info;
            cout << "Please enter your registered student ID: "<< endl;
            cin >> ID;
            cout << "StudentID"<<"\t"<<"Course"<<"\t"<<"Year"<<"\t"<<"Marks"<<endl;
            
            // extracting words from the file
            while (file >> word)
            {
                //display information based on ID
                if (word == ID) {
                    getline(file , info);
                    cout << ID <<"\t"<<info << endl;
                }
            }
            file.close();
        }
        
    
    };
class Undergraduate : public Student{
public:
    
    //function
    void selectcourse(){
        //declaration
        ifstream file1;
        string item,item1,item2,item3;
        string courseid;
        
        //open file
        file1.open("course.txt");
        
        //show courses
        while(file1 >> item){
            getline(file1, item1);
            cout << item << item1<< endl;
        }
        
        cout << ""<< endl;
        //form
        cout << "Enter Course ID chosen:"<<endl;
        cout << "Course ID: ";
        cin >> courseid;
        
        while (file1 >> item2) {
            if(item2 == courseid){
            getline(file1, item3);
                cout << courseid <<"\t"<< item3 << endl;
        }
        
            
        }
        
        //put in select course column
        ofstream outFile("selectcourse.txt",ofstream::app);
    };
};

class Graduate : public Student{
public:
    
    void selectcourse(){
        //declaration
        ifstream file1;
